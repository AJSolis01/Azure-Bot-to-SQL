{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "channels_WebChatChannel_enablePreview": {
            "type": "Bool"
        },
        "serverfarms_AzureCloudBotSQLFarm_name": {
            "defaultValue": "AzureCloudBotSQLFarm",
            "type": "String"
        },
        "botServices_ISITAzureCloudBotSQLService_name": {
            "defaultValue": "ISITAzureCloudBotSQLService",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.BotService/botServices",
            "apiVersion": "2020-06-02",
            "name": "[parameters('botServices_cloudcomputebot_name')]",
            "location": "global",
            "sku": {
                "name": "F0"
            },
            "kind": "sdk",
            "properties": {
                "displayName": "[parameters('botServices_cloudcomputebot_name')]",
                "iconUrl": "https://docs.botframework.com/static/devportal/client/images/bot-framework-default.png",
                "endpoint": "[concat('https://', parameters('botServices_cloudcomputebot_name'), '.azurewebsites.net/api/messages')]",
                "msaAppId": "b5dcfcf3-57e0-4b72-b6a9-bab80835d5c0",
                "luisAppIds": [],
                "isCmekEnabled": false
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[parameters('serverfarms_cloudcomputebot_name')]",
            "location": "East US",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "size": "S1",
                "family": "S",
                "capacity": 1
            },
            "kind": "app",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.BotService/botServices/channels",
            "apiVersion": "2020-06-02",
            "name": "[concat(parameters('botServices_cloudcomputebot_name'), '/WebChatChannel')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.BotService/botServices', parameters('botServices_cloudcomputebot_name'))]"
            ],
            "properties": {
                "properties": {
                    "sites": [
                        {
                            "siteName": "Default Site",
                            "isEnabled": true,
                            "enablePreview": "[parameters('channels_WebChatChannel_enablePreview')]"
                        }
                    ]
                },
                "channelName": "WebChatChannel"
            }
        }
    ]
}
